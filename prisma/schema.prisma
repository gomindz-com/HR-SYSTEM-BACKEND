// ========================================
// DATABASE CONFIGURATION
// ========================================
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ========================================
// ENUMS
// ========================================
enum Role {
  STAFF
  MANAGER
  ADMIN
}

enum EmployeeStatus {
  ACTIVE
  ON_LEAVE
  INACTIVE
}

enum EmploymentType {
  FULL_TIME
  PART_TIME
  CONTRACTOR
}

enum AttendanceStatus {
  ON_TIME
  ABSENT
  LATE
  EARLY
}

enum Shift {
  MORNING_SHIFT
  AFTERNOON_SHIFT
}

enum LeaveType {
  STUDY
  MATERNITY
  SICK
  VACATION
  ANNUAL
  PERSONAL
}

enum LeaveStatus {
  PENDING
  APPROVED
  REJECTED
}

enum PayrollStatus {
  PENDING
  PROCESSED
  PAID
}

enum ReviewStatus {
  COMPLETED
  IN_PROGRESS
}

enum NotificationType {
  LEAVE_REQUEST
  REVIEW
}

enum InvitationStatus {
  PENDING
  ACCEPTED
  EXPIRED
}

enum BenefitCategory {
  CAR_ALLOWANCE      // Car allowance
  FOOD_ALLOWANCE     // Food/meal allowance
  HOUSING_ALLOWANCE  // Housing allowance
  TRANSPORT_ALLOWANCE // Transport allowance
  MEDICAL_ALLOWANCE  
  HEALTH_INSURANCE    
  RETIREMENT          
  OTHER             
}

// ========================================
// CORE COMPANY MODELS
// ========================================
model Company {
  id                 Int                 @id @default(autoincrement())
  companyName        String
  companyEmail       String?             @unique
  companyTin         String?             @unique
  companyAddress     String?
  hrId               Int?
  hr                 Employee?           @relation("Company_hr", fields: [hrId], references: [id])
  companyDescription String?
  // Attendance Settings
  timezone           String              @default("UTC")
  workStartTime      String              @default("09:00") // Format: HH:MM
  workEndTime        String              @default("17:00") // Format: HH:MM
  workStartTime2     String              @default("17:00") // Second shift start time
  workEndTime2       String              @default("23:59") // Second shift end time
  lateThreshold      Int                 @default(15) // Minutes after workStartTime
  checkInDeadline    Int                 @default(15) // Minutes after workEndTime (grace period)
  employees          Employee[]
  departments        Department[]
  attendances        Attendance[]
  leaveRequests      LeaveRequest[]
  locations          CompanyLocation[]
  payrolls           Payroll[]
  performanceReviews PerformanceReview[]
  invitations        Invitation[]
  activities         Activity[]
  employeeBenefits   EmployeeBenefit[]
  createdAt          DateTime            @default(now())
}

model CompanyLocation {
  id        Int          @id @default(autoincrement())
  companyId Int
  company   Company      @relation(fields: [companyId], references: [id])
  name      String
  latitude  Float
  longitude Float
  isActive  Boolean      @default(true)
  attendances Attendance[] // Reverse relation to track attendance from this location
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt
}

// ========================================
// EMPLOYEE MANAGEMENT MODELS
// ========================================
model Employee {
  id                    Int                 @id @default(autoincrement())
  employeeId            String?             @unique // Company-assigned unique employee ID
  name                  String
  email                 String              @unique
  phone                 String?
  profilePic            String?
  password              String
  position              String?
  departmentId          Int?
  department            Department?         @relation(fields: [departmentId], references: [id])
  companyId             Int
  company               Company             @relation(fields: [companyId], references: [id])
  location              String?
  status                EmployeeStatus      @default(ACTIVE)
  avatar                String?
  role                  Role
  shiftType             Shift?              @default(MORNING_SHIFT)
  dateOfBirth           DateTime?
  deleted               Boolean             @default(false)
  address               String?
  emergencyContact      String?
  employmentType        EmploymentType      @default(FULL_TIME)
  salary                Float?
  lastLogin             DateTime?
  resetPasswordToken    String?
  resetPasswordExpires  DateTime?
  attendances           Attendance[]        @relation("EmployeeAttendance")
  leaveRequests         LeaveRequest[]
  payrolls              Payroll[]
  performanceReviews    PerformanceReview[]
  notifications         Notification[]
  qrSecret              String?
  createdAt             DateTime            @default(now())
  managedDepartments    Department[]        @relation("DepartmentManager")
  approvedLeaveRequests LeaveRequest[]      @relation("LeaveApprover")
  reviewsGiven          PerformanceReview[] @relation("Reviewer")
  sentInvitations       Invitation[]
  hrForCompanies        Company[]           @relation("Company_hr")
  benefits              EmployeeBenefit[]
  payrollProfile        EmployeePayrollProfile?
}

model Department {
  id         Int          @id @default(autoincrement())
  name       String
  managerId  Int?
  manager    Employee?    @relation("DepartmentManager", fields: [managerId], references: [id])
  employees  Employee[]
  createdAt  DateTime     @default(now())
  companyId  Int
  company    Company      @relation(fields: [companyId], references: [id]) // <--- And this line
  Invitation Invitation[]
}

// ========================================
// ATTENDANCE SYSTEM MODELS
// ========================================
model Attendance {
  id         Int              @id @default(autoincrement())
  employeeId Int
  employee   Employee         @relation("EmployeeAttendance", fields: [employeeId], references: [id])
  companyId  Int
  company    Company          @relation(fields: [companyId], references: [id])
  locationId Int?             // Track which office/location employee clocked in from
  location   CompanyLocation? @relation(fields: [locationId], references: [id])
  date       DateTime
  timeIn     DateTime? // Use DateTime for exact check-in time
  timeOut    DateTime? // Use DateTime for exact check-out time
  status     AttendanceStatus
  createdAt  DateTime         @default(now())
  updatedAt  DateTime         @updatedAt

  @@unique([employeeId, date])
}

// ========================================
// LEAVE MANAGEMENT MODELS
// ========================================
model LeaveRequest {
  id            Int         @id @default(autoincrement())
  employeeId    Int
  employee      Employee    @relation(fields: [employeeId], references: [id])
  companyId     Int
  company       Company     @relation(fields: [companyId], references: [id])
  leaveType     LeaveType  
  startDate     DateTime
  endDate       DateTime
  days          Int
  status        LeaveStatus @default(PENDING)
  approverId    Int?
  approver      Employee?   @relation("LeaveApprover", fields: [approverId], references: [id])
  comments      String?
  attachmentUrls Json?
  isApproved    Boolean?
  rejectReason  String?
  approvedAt    DateTime?

  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @default(now())
}

// ========================================
// PAYROLL SYSTEM MODELS
// ========================================
model Payroll {
  id                  Int           @id @default(autoincrement())
  employeeId          Int
  employee            Employee      @relation(fields: [employeeId], references: [id])
  companyId           Int
  company             Company       @relation(fields: [companyId], references: [id])
  periodStart         DateTime
  periodEnd           DateTime
  baseSalary          Float
  bonuses             Float?        @default(0)
  benefitsCost        Float?        @default(0)    // Benefits ADD to gross salary
  grossPay            Float?                       // baseSalary + bonuses + benefitsCost
  
  // Only actual DEDUCTIONS (subtract from gross)
  incomeTax           Float?        @default(0)    // From EmployeeTaxProfile
  socialSecurity      Float?        @default(0)    // From EmployeeTaxProfile  
  attendancePenalties Float?        @default(0)    // Calculated in controller
  totalDeductions     Float?        @default(0)    // Sum of above 3
  
  netPay              Float                        // grossPay - totalDeductions
  status              PayrollStatus @default(PENDING)
  processedDate       DateTime?
  paymentMethod       String?
  notes               String?
  hoursWorked         Float?        @default(0)
  createdAt           DateTime      @default(now())
}

// ========================================
// SIMPLIFIED BENEFITS & TAX SYSTEM
// ========================================

model EmployeeBenefit {
  id           String   @id @default(cuid())
  employeeId   Int
  employee     Employee @relation(fields: [employeeId], references: [id])
  companyId    Int
  company      Company  @relation(fields: [companyId], references: [id])
  
  benefitType  BenefitCategory
  amount       Float    // Monthly amount
  isActive     Boolean  @default(true)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

// Employee payroll configuration (flexible for future features)
model EmployeePayrollProfile {
  id                String   @id @default(cuid())
  employeeId        Int      @unique
  employee          Employee @relation(fields: [employeeId], references: [id])
  
  // Tax configuration
  taxBracket        String?  // "15%", "20%", "25%", etc.
  socialSecurityRate Float   @default(0) 
  customTaxRate     Float?   @default(0)
  
  // Future payroll settings can be added here
  // overtimeRate      Float?   // When overtime is implemented
  // payFrequency      String?  // MONTHLY, BIWEEKLY, etc.
  // paymentMethod     String?  // BANK_TRANSFER, CASH, MOBILE_MONEY
  
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}

// ========================================
// PERFORMANCE MANAGEMENT MODELS
// ========================================
model PerformanceReview {
  id          Int          @id @default(autoincrement())
  employeeId  Int
  employee    Employee     @relation(fields: [employeeId], references: [id])
  companyId   Int
  company     Company      @relation(fields: [companyId], references: [id])
  reviewerId  Int
  reviewer    Employee     @relation("Reviewer", fields: [reviewerId], references: [id])
  periodStart DateTime
  periodEnd   DateTime
  score       Float
  rating      Float
  comments    String?
  status      ReviewStatus @default(IN_PROGRESS)
  createdAt   DateTime     @default(now())
}

// ========================================
// NOTIFICATION & INVITATION MODELS
// ========================================
model Notification {
  id        Int      @id @default(autoincrement())
  userId    Int
  user      Employee @relation(fields: [userId], references: [id])
  message   String
  type      String
  read      Boolean  @default(false)
  createdAt DateTime @default(now())
}

model Invitation {
  id           Int              @id @default(autoincrement())
  email        String
  role         Role
  invitedBy    Int
  position     String
  inviter      Employee         @relation(fields: [invitedBy], references: [id])
  companyId    Int
  company      Company          @relation(fields: [companyId], references: [id])
  departmentId Int
  department   Department       @relation(fields: [departmentId], references: [id])
  status       InvitationStatus @default(PENDING)
  token        String           @unique
  expiresAt    DateTime
  createdAt    DateTime         @default(now())
  updatedAt    DateTime         @updatedAt
}


// ========================================
// ACTIVITY TRACKING MODELS
// ========================================

model Activity {
  id          Int      @id @default(autoincrement())
  companyId   Int
  company     Company  @relation(fields: [companyId], references: [id])
  type        String   // PERFORMANCE_REVIEW, ATTENDANCE, LEAVE_REQUEST, etc.
  title       String   // "Performance Review Due"
  description String   // "Q4 reviews need completion for 5 employees"
  priority    String   @default("NORMAL") // URGENT, HIGH, NORMAL, LOW
  icon        String   @default("default") // performance, attendance, leave, etc.
  createdAt   DateTime @default(now())
}

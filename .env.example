# Database
HR_DATABASE_URL="postgresql://user:password@host:5432/dbname?sslmode=require"
PORT=5000
NODE_ENV=development
UNIVERSAL_QR_CODE=QR_CODE_STRING

# Auth
JWT_SECRET=your-jwt-secret-min-32-chars-change-in-production

# Frontend
CLIENT_URL="http://localhost:5173"

# Cloudinary (optional)
CLOUDINARY_CLOUD_NAME=cloud_name
CLOUDINARY_API_KEY=123456789012345
CLOUDINARY_API_SECRET=cloudinary_api_secret

DEBUG_QUERIES=false

# Resend (optional)
RESEND_API_KEY=re_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
RESEND_FROM_EMAIL=noreply@example.com
RESEND_FROM_NAME=App Name

# Modem Pay (optional)
MODEM_PAY_API_KEY=sk_test_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
MODEM_PAY_WEBHOOK_SECRET=whsec_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Super admin (set for first-time setup)
SUPER_ADMIN_EMAIL=
SUPER_ADMIN_PASSWORD=
SUPER_ADMIN_NAME=

# Encryption for API keys / device passwords (generate: openssl rand -hex 32)
ENCRYPTION_KEY=

# Dahua DoLynk Pro (webhook URL: https://your-api/dahua)
DAHUA_APP_KEY=
DAHUA_APP_SECRET=
# DoLynk Open API (add device): Product ID from DoLynk console (integer)
DOLYNK_PRODUCT_ID=
# Optional: DOLYNK_API_BASE_URL, DOLYNK_API_VERSION (default v1), DOLYNK_ACCEPT_LANGUAGE (default en-US)
# Production: set both false. Dev with ngrok: true to allow missing signature and log body.
DOLYNK_DEBUG_SIGNATURE=false
DOLYNK_ALLOW_NO_SIGNATURE=false

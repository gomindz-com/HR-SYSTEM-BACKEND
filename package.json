{
  "name": "backend",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "start": "node ./bin/index.js",
    "dev": "nodemon ./bin/index.js",
    "test:automation": "node test-automation.js",
    "db:generate:dev": "prisma generate --schema=./prisma/schema.sqlite.prisma",
    "db:generate:prod": "prisma generate --schema=./prisma/schema.postgresql.prisma",
    "db:push:dev": "prisma db push --schema=./prisma/schema.sqlite.prisma",
    "db:push:prod": "prisma db push --schema=./prisma/schema.postgresql.prisma",
    "db:studio:dev": "prisma studio --schema=./prisma/schema.sqlite.prisma",
    "db:studio:prod": "prisma studio --schema=./prisma/schema.postgresql.prisma",
    "db:migrate:dev": "prisma migrate dev --schema=./prisma/schema.sqlite.prisma",
    "db:migrate:prod": "prisma migrate deploy --schema=./prisma/schema.postgresql.prisma"
  },
  "dependencies": {
    "@prisma/client": "^6.12.0",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^3.0.2",
    "cloudinary": "^1.41.3",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "date-fns": "^4.1.0",
    "debug": "~2.6.9",
    "dotenv": "^17.2.0",
    "express": "^4.21.2",
    "http": "^0.0.1-security",
    "http-errors": "~1.6.3",
    "jade": "~1.11.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "~1.9.1",
    "multer": "^2.0.2",
    "multer-storage-cloudinary": "^4.0.0",
    "node-cron": "^4.2.1",
    "nodemailer": "^7.0.5",
    "nodemon": "^3.1.10",
    "resend": "^4.7.0",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "prisma": "^6.12.0"
  }
}
